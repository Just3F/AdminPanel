@model AdminPanel.ViewModels.MainCategoryViewModel

@section Scripts{
    <script src="~/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script src="~/assets/demo/default/custom/crud/datatables/basic/basic.js" type="text/javascript"></script>
}
@section Styles{
    <link href="~/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
}

<div class="m-portlet__head">
    <div class="m-portlet__head-caption">
        <div class="m-portlet__head-title">
            <h3 class="m-portlet__head-text">
                Главная категория
                <small>
                </small>
            </h3>
        </div>
    </div>
</div>
<div class="m-portlet__body">
    <div class="row">
        <div class="col-md-12">
            <div class="m-portlet m-portlet--tab">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <span class="m-portlet__head-icon m--hide">
                                <i class="la la-gear"></i>
                            </span>
                            <h3 class="m-portlet__head-text">
                                Main Category Settings
                            </h3>
                        </div>
                    </div>
                </div>
                <!--begin::Form-->
                <form class="m-form m-form--fit m-form--label-align-right" asp-action="ManageMainCategory">
                    <input type="hidden" asp-for="PKID" />
                    <div class="m-portlet__body">
                        <div class="form-group m-form__group">
                            <label for="exampleTextarea">Название</label>
                            <input type="text" class="form-control m-input" rows="3" asp-for="Name" />
                        </div>
                        <div class="form-group m-form__group">
                            <label>Сортировка(порядок):</label>
                            <input type="number" class="form-control m-input" placeholder="" asp-for="Order" />
                        </div>
                    </div>
                    <div class="m-portlet__foot m-portlet__foot--fit">
                        <div class="m-form__actions">
                            <button type="submit" class="btn btn-brand">Сохранить</button>
                        </div>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
    </div>
</div>
