@using AdminPanel.ViewModels
@model AdminPanel.ViewModels.CategoriesModel

@section Scripts{
    <script src="~/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script src="~/assets/demo/default/custom/crud/datatables/basic/basic.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                "scrollX": true
            });
        });
    </script>
}
@section Styles{
    <link href="~/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
}

<div class="m-portlet__head">
    <div class="m-portlet__head-caption">
        <div class="m-portlet__head-title">
            <h3 class="m-portlet__head-text">
                Категории
                <small>
                </small>
            </h3>
        </div>
    </div>
    <div class="m-portlet__head-tools">
        <ul class="m-portlet__nav">
            <li class="m-portlet__nav-item">
                <a asp-controller="Admin" asp-action="ManageCategory" class="btn btn-success m-btn m-btn--pill m-btn--custom m-btn--icon m-btn--air">
                    <span>
                        <i class="flaticon-add-circular-button"></i>
                        <span>Добавить новую категорию</span>
                    </span>
                </a>
            </li>
        </ul>
    </div>
</div>
<div class="m-portlet__body">
    <table id="example" class="table table-striped- table-bordered table-hover table-checkable custom-table" style="width:100%">
        <thead>
            <tr>
                <th>Название категории</th>
                <th>Описание(необязательно)</th>
                <th class="actions">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>
                        <a asp-action="ManageCategory" asp-controller="Admin" asp-route-id="@category.PKID"
                           class="m-portlet__nav-link btn m-btn m-btn--hover-accent m-btn--icon m-btn--icon-only m-btn--pill" title="Edit">
                            <i class="la la-edit"></i>
                        </a>
                        <a href="#" class="m-portlet__nav-link btn m-btn m-btn--hover-danger m-btn--icon m-btn--icon-only m-btn--pill" title="Delete"><i class="la la-trash"></i></a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
