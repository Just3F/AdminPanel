@{
    Layout = "_AccountLayout";
}

<div class="m-login__signin">
    <div class="m-login__head">
        <h3 class="m-login__title">
            Email Verification
        </h3>
    </div>
</div>

<div class="m-login__account">
    <span class="m-login__account-msg">
        @ViewBag.Response
    </span>
    <br />
    &nbsp;&nbsp;
    <a asp-action="Login" asp-controller="Account" class="m-link m-link--light m-login__account-link">
        Go To Login Panel
    </a>
</div>